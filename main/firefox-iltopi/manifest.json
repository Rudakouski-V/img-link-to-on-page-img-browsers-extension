{
  "manifest_version": 2,
  "name": "Iltopi",
  "version": "0.1.0",
  "description": "Расширение для браузеров, преобразующее (для определённых сайтов) ссылку на изображение в непосредственно само изображение",

  "icons": {
    "32": "icons/32-icon.png",
    "64": "icons/64-icon.png",
    "128": "icons/128-icon.png"
  },

  "applications": {
    "gecko": {
      "id": "rva1997+iltopi@gmail.com",
      "strict_min_version": "45.0"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.userapi.com/impf/*/*",
        "*://*.userapi.com/impg/*/*",
        "*://*.userapi.com/impf/*/*/*/*",
        "*://*.userapi.com/impg/*/*/*/*"
      ],
      "js": [
        "app.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}